{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "sermon-browser/preacher-list",
	"version": "0.7.0",
	"title": "Preacher List",
	"category": "widgets",
	"icon": "groups",
	"description": "Display a list of preachers with optional sermon counts.",
	"keywords": ["sermon", "preacher", "speaker", "list"],
	"textdomain": "sermon-browser",
	"attributes": {
		"limit": {
			"type": "number",
			"default": 0
		},
		"showCount": {
			"type": "boolean",
			"default": true
		},
		"orderBy": {
			"type": "string",
			"default": "name"
		},
		"order": {
			"type": "string",
			"default": "asc"
		},
		"layout": {
			"type": "string",
			"default": "list"
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"text": true,
			"background": true,
			"link": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		}
	},
	"render": "file:./render.php"
}
