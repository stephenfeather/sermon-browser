{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "sermon-browser/series-grid",
	"version": "0.7.0",
	"title": "Series Grid",
	"category": "widgets",
	"icon": "grid-view",
	"description": "Display sermon series in a card grid layout.",
	"keywords": ["sermon", "series", "grid", "cards"],
	"textdomain": "sermon-browser",
	"attributes": {
		"columns": {
			"type": "number",
			"default": 3
		},
		"limit": {
			"type": "number",
			"default": 12
		},
		"showCount": {
			"type": "boolean",
			"default": true
		},
		"showDescription": {
			"type": "boolean",
			"default": false
		},
		"orderBy": {
			"type": "string",
			"default": "name"
		},
		"order": {
			"type": "string",
			"default": "asc"
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"text": true,
			"background": true,
			"link": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		}
	},
	"render": "file:./render.php"
}
