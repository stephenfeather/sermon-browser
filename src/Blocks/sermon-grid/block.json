{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "sermon-browser/sermon-grid",
	"version": "0.8.0",
	"title": "Sermon Grid",
	"category": "widgets",
	"icon": "grid-view",
	"description": "Display sermons in a responsive card/grid layout.",
	"keywords": ["sermon", "grid", "cards", "featured"],
	"textdomain": "sermon-browser",
	"attributes": {
		"layout": {
			"type": "string",
			"default": "grid",
			"enum": ["grid", "cards"]
		},
		"columns": {
			"type": "number",
			"default": 3
		},
		"limit": {
			"type": "number",
			"default": 6
		},
		"showThumbnails": {
			"type": "boolean",
			"default": true
		},
		"showExcerpt": {
			"type": "boolean",
			"default": true
		},
		"excerptLength": {
			"type": "number",
			"default": 20
		},
		"showPreacher": {
			"type": "boolean",
			"default": true
		},
		"showDate": {
			"type": "boolean",
			"default": true
		},
		"showSeries": {
			"type": "boolean",
			"default": false
		},
		"preacherId": {
			"type": "number",
			"default": 0
		},
		"seriesId": {
			"type": "number",
			"default": 0
		},
		"orderBy": {
			"type": "string",
			"default": "datetime"
		},
		"order": {
			"type": "string",
			"default": "desc"
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"text": true,
			"background": true,
			"link": true
		}
	},
	"render": "file:./render.php"
}
