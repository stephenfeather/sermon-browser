{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "sermon-browser/sermon-list",
	"version": "0.7.0",
	"title": "Sermon List",
	"category": "widgets",
	"icon": "list-view",
	"description": "Display a filterable list of sermons with pagination.",
	"keywords": ["sermon", "list", "archive", "search", "filter"],
	"textdomain": "sermon-browser",
	"attributes": {
		"limit": {
			"type": "number",
			"default": 10
		},
		"preacherId": {
			"type": "number",
			"default": 0
		},
		"seriesId": {
			"type": "number",
			"default": 0
		},
		"serviceId": {
			"type": "number",
			"default": 0
		},
		"showFilters": {
			"type": "boolean",
			"default": true
		},
		"filterType": {
			"type": "string",
			"default": "dropdown",
			"enum": ["dropdown", "oneclick", "none"]
		},
		"showBooks": {
			"type": "boolean",
			"default": false
		},
		"showTags": {
			"type": "boolean",
			"default": false
		},
		"showDateRange": {
			"type": "boolean",
			"default": false
		},
		"showSearch": {
			"type": "boolean",
			"default": false
		},
		"bookId": {
			"type": "string",
			"default": ""
		},
		"tagSlug": {
			"type": "string",
			"default": ""
		},
		"startDate": {
			"type": "string",
			"default": ""
		},
		"endDate": {
			"type": "string",
			"default": ""
		},
		"showPagination": {
			"type": "boolean",
			"default": true
		},
		"orderBy": {
			"type": "string",
			"default": "datetime"
		},
		"order": {
			"type": "string",
			"default": "desc"
		},
		"enableDynamicFiltering": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"text": true,
			"background": true,
			"link": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		}
	},
	"viewScript": "file:../../frontend.js",
	"render": "file:./render.php"
}
